<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F3F3"
        android:gravity="center"
        tools:context=".SingUpPage">

        <ImageButton
            android:id="@+id/backToMain"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_1sdp"
            android:background="@mipmap/ic_backbutton" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_40ssp"
                android:paddingTop="@dimen/_5ssp"
                android:paddingRight="@dimen/_40ssp"
                android:paddingBottom="@dimen/_5ssp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/account" />
            </LinearLayout>

            <TextView
                android:id="@+id/FullNameText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Full Name:"
                android:textColor="#000000"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/FullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:hint="Enter The Full Name"
                android:inputType="text"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/Driver_EmailText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Email: "
                android:textColor="#000000"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/Driver_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:hint="Enter The Email"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/Driver_PhoneText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Phone Number:"
                android:textColor="#000000"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/Driver_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:hint="5XXXXXXXX without 0 "
                android:inputType="phone"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/NationalIDText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="National ID:"
                android:textColor="#000000"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/NationalID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:hint="Enter The National ID and hould be 10 digit"
                android:inputType="number"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/RelativeNumberText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Relative Number:"
                android:textColor="#000000"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/RelativeNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:hint="5XXXXXXXX without 0 "
                android:inputType="number"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/Driver_PassText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Password:"
                android:textColor="#000000"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/Driver_Pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Enter The Password"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/Driver_ConfirmPassText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Confirm Password:"
                android:textColor="#000000"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/Driver_ConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="The Confirm Password:"
                android:textSize="@dimen/_12ssp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BloodTypeText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Blood type: "
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <RadioGroup
                    android:id="@+id/BloodTypeGroups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/APositive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A+" />

                    <RadioButton
                        android:id="@+id/ANegative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A-" />

                    <RadioButton
                        android:id="@+id/BPositive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B+" />

                    <RadioButton
                        android:id="@+id/BNegative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B-" />

                    <RadioButton
                        android:id="@+id/OPositive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O+" />

                    <RadioButton
                        android:id="@+id/ONegative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O-" />

                    <RadioButton
                        android:id="@+id/ABpositive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AB+" />

                    <RadioButton
                        android:id="@+id/ABNegative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AB-" />
                </RadioGroup>


                <TextView
                    android:id="@+id/Disabled"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Are you a disabled person? "
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <RadioGroup
                    android:id="@+id/DisabledsGroups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/DisabledYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/DisabledNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

                <TextView
                    android:id="@+id/chronicIllness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Are you suffering from a chronic illness? "
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <RadioGroup
                    android:id="@+id/chronicIllnessGroups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/chronicIllnessYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/chronicIllnessNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

                <TextView
                    android:id="@+id/WhatchronicIllness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="If you choose yes, what is the chronic illness?"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <EditText
                    android:id="@+id/chronicIllnessKind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="chronic illness"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/CarIDText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Car ID:"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <EditText
                    android:id="@+id/CarID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Car ID, Should be at least 3 digit and 3 characters"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/CarCompanyText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Car Company:"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <EditText
                    android:id="@+id/CarCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Car Company"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/CarColorText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Car Color:"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <EditText
                    android:id="@+id/CarColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Car Color"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <Button
                android:id="@+id/CreateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E05D5D"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minWidth="@dimen/_120sdp"
                android:onClick="onClickSingUpNext"
                android:padding="@dimen/_8ssp"
                android:singleLine="true"
                android:text="Create account"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15ssp"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>